<?xml version="1.0" encoding="UTF-8"?>
<Context path="/" docBase="myApp" crossContext="true" reloadable="true">
	<Resource name="jdbc/livraria" auth="Container"
      factory="com.zaxxer.hikari.HikariJNDIFactory"
      type="javax.sql.DataSource"
      minimumIdle="5" 
      maximumPoolSize="10"
      connectionTimeout="300000"
      dataSourceClassName="com.mysql.jdbc.jdbc2.optional.MysqlDataSource"
      dataSource.user="livraria"
      dataSource.password="livraria"
      dataSource.url="jdbc:mysql://localhost:3306/livraria"/>
</Context>
